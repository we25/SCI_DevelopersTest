@*
    CREATE - DEPARTMENT
*@

@model DepartmentAddVM

<form asp-controller="Department" asp-action="Create" method="post" class="container mt-4">
    <fieldset class="border p-4 rounded">
        
        <h2 class="text-center mb-4">Add a new department:</h2>

        <div class="row mb-3">

        <div class="col-md-4">
            <label for="departmentName" class="form-label">Department Name:</label>
            <input type="text" asp-for="departmentName" class="form-control" id="employeeName" placeholder="Enter Department Name">
            <span asp-validation-for="departmentName"></span>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-primary me-2">Save Changes</button>
            <button class="btn btn-danger">
                    <a asp-controller="Department" asp-action="Index">Exit</a>
            </button>
        </div>
    </fieldset>
</form>
