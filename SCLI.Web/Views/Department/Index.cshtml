@*
    INDEX - DEPARTMENT
*@

@model List<DepartmentVM>

<div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">Click button to create a new department.</strong>
    </div>
    <div class="toast-body">
        <button class="btn btn-danger">
            <a href="/Department/Create">Add Department!</a>
        </button>
    </div>
</div>

<table class="table table-hover" >
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Department Name</th>
            <th scope="col">Edit</th>
            <th scope="col">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>@item.id</td>
                <td>@item.departmentName</td>
                <td> <button class="btn btn-warning"><a href="/Department/Edit?Id=@item.id">Edit</a></button> </td>
                <td> <button class="btn btn-danger"><a href="/Department/Remove?Id=@item.id">Delete</a></button> </td>
            </tr>
        }
    </tbody>
</table>